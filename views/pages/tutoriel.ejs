
<div class="container py-5">
    <h1><%= tutorial.title %></h1>
    <p class="text-muted">
        Publié le <%= tutorial.date_publication 
        ?  new Date(tutorial.date_publication).toLocaleDateString('fr-FR') 
            : new Date(tutorial.created_at).toLocaleDateString('fr-FR') %>
        par <%= tutorial.author?.name || 'Auteur inconnu' %> |
        Catégorie : <%= tutorial.category?.nom || 'Non catégorisé' %>
    </p>

    <% if(tutorial.image) { %>
        <img src="/images/<%= tutorial.image %>" 
        alt="<%= tutorial.title %>" 
        class="d-block mx-auto img-fluid my-3"
        style="max-height: 400px; object-fit: cover;">
    <% } %>

    <div class="mt-4">
        <%- tutorial.content %>
        <a href="/tutoriels" class="btn btn-catalogue">← Précedent</a>
    </div>
</div>
